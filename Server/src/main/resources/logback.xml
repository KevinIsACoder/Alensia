<configuration scan="true">
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%d %-5level [%logger{0}] %X{akkaSource} - %msg%n</pattern>
			<!-- pattern>%d %-5level [%logger{0}] %msg%n</pattern -->
			<!-- pattern>%d %-5level [%logger{0}] %X{sourceThread} - %msg%n</pattern -->
		</encoder>
	</appender>

	<logger name="alensia" level="DEBUG" />

	<!-- logger name="akka" level="DEBUG" / -->

	<root level="INFO">
		<appender-ref ref="STDOUT" />
	</root>
</configuration>
